package myy803.springboot.IoC.myy803_IoC_tutorial_0;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ApplicationContext;

@SpringBootApplication
public class Myy803IoCTutorial0Application implements CommandLineRunner {
	
	@Autowired
	private Controller controller;
	
	/*
	 * Alternative way to auto wiring is to get a bean from the container
	 * To access the contailer we have to declare a ApplicationContext object
	 * 
	 * @Autowired
	 * private ApplicationContext context;
	 *
	 */
	private ApplicationContext context;
	
	public static void main(String[] args) {
		SpringApplication.run(Myy803IoCTutorial0Application.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		
		System.out.println("******* SpringBoot IoC Tutorial 0 ******* Autowire a Controller object");
		
		controller.request("Dig a whole");
		controller.request("Bury treasure");

		/* 
		 * Alternative way to auto wiring is to get a bean from the container
		 * 	 
		 * Controller controller = context.getBean(Controller.class);
		 * controller.request("Dig a whole");
		 * controller.request("Bury treasure");
		 *
		 */
	}

}
